    <script>
        //Random Background Color 
        const btn = document.getElementById('easterEgg-btn');
        const text = "You found the EASTER EGG!!";
        let index = 0;

        // Event listener for the button to go back to the previous page
        btn.addEventListener('click', () => {
            history.back();
        });

        function randomBg(){
            return `hsl(${Math.floor(Math.random() * 360)}, 100%, 50%)`;
        }

        function changeBackground() {
            document.body.style.backgroundColor = randomBg();
        }

        // Automatic letter on Dom 
        function writeText() {
            document.querySelector('h2').innerText = text.slice(0, index);
            index++;

            if (index > text.length) {
                index = 0;
            }
        }
        setInterval(writeText, 200);
        setInterval(changeBackground, 1500);

