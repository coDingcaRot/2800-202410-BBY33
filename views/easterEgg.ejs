        function createFallingImage(){
            const emoji = document.createElement("img");
            emoji.src = "/img/favicon.png"; 

            emoji.classList.add("emoji");            

            emoji.style.width = "30px"; 
            emoji.style.height = "30px";
            emoji.style.left = Math.random() * 100 + "vw"; 
